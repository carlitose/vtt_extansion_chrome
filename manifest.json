{
  "manifest_version": 3,
  "name": "VTT Downloader",
  "version": "1.0.0",
  "description": "Download VTT files from web pages and save them as .txt files with the page title",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "webRequest"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
